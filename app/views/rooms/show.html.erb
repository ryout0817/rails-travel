<%= render 'shared/header', user: @user %>


<div class="container room-show">
  <div class="room-show-row">
    <div class="col-md-8">
      
        <% if @room.room_image.attached? %>
          <%= image_tag @room.room_image, class: "room-show-picture" , alt: "ルーム画像"%>
        <% end %>
        <div class="room-show-manager">
          <div class="room-show-icon">
            <%= image_tag 'https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg', alt: "デフォ画像", class: 'host-icon' %>
          </div>
          <div class="room-show-profile">
            <div class="room-show-profile-name">
              <%= @room.room_name %>
            </div>
            <div class="room-show-profile-city">
              <%= @room.city%>
            </div>
          </div>
        </div>
        <p class="room-show-introduction">
          <%= @room.room_introduction %>
        </p>      
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        
          <h5 class="price-icon">¥<%= @room.price%>/ 日</h5>
      
        <div class="room-show-date-select">
        <%# フォームの中のデータを送信 %>
          <%= form_with url:new_reservation_path, local: true do |f| %> 
            <%= f.label :start_day,"開始日"%>
            <%= f.date_field :start_day, class: "room-show-form" %>
            <%= f.label :finish_day,"終了日"%>
            <%= f.date_field :finish_day, class: "room-show-form" %>
            <%= f.label :people,"人数"%>
            <%= f.number_field :people, class: "room-show-form" %>
            <%= f.hidden_field :user_id, value:@user.id%>
            <%= f.hidden_field :room_id, value:@room.id%>
            <%= f.submit "予約する", class:"register-col"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<%= render 'shared/footer' %>

