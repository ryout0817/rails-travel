<%= render "shared/header"%>

<div class="container-form">
  <div class="form-box">
    <p class="box-row">新しいアカウントを作成</p>
    <%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
    <%= form_with model:@user, url: user_registration_path, local: true do |f| %>  <%#form_withに変更%>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <p class="require">必須</p>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "field-row"%> 
      </div>
      <div class="field">
        <p class="require">必須</p>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "field-row" %>
      </div>
      <div class="field">
        <p class="require">必須</p>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "field-row" %>
      </div>
      <div class="field">
        <p class="require">必須</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "field-row" %>
      </div>
      <div class="register">
        <%= f.submit "新しいアカウントを作成する", class: "register-col" %>
      </div>
    <% end %>
    <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: "path" %>
  </div>
</div>


<%= render 'shared/footer'%>